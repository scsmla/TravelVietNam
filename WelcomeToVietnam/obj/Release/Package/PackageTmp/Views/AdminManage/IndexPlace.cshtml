@model IEnumerable<WelcomeToVietnam.Models.Place>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminManage/Shared/LayoutAdmin.cshtml";
}

<h2 style="color:white">Manage</h2>

<style>
    a,th,tr,td{
        color:white;
    }
</style>
<table class="table">
    <tr>
        
        <th >
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Area1.AreaTravelling)
        </th>
,        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Area1.AreaTravelling)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPlace", new { id=item.ID },new { style ="color:white"}) |
            @Html.ActionLink("Delete", "DeletePlace", new { id=item.ID }, new { style = "color:white" })
        </td>
    </tr>
}

</table>
