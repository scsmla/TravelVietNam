@using PagedList;
@using PagedList.Mvc;
@model IPagedList<WelcomeToVietnam.Models.Place>
@{ Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome To Viet Nam</title>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/cupertino/jquery-ui.css" type="text/css" rel="Stylesheet" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js" type="text/javascript"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/UserPage.css">

</head>
<body style="background-image: url(/Photos/user.jpg); background-position: center;">
    <div class="navbar navbar-default navbar-fixed-top" style="background: transparent;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>
    <br>
    <br>
    <h1 style="color:white"> LET 'S TRAVEL</h1>
    <h5 style="color:white; font-size: 20px;float:left">Find your destination we will take you to go there</h5>
    <br>
    
        <br>
        <br>
        <br>
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "color:red;font-weight:bold" })
            @using (@Html.BeginForm())
            {

                @*<br/>
                    @Html.Editor("search",new { htmlAttributes = new { @class = "inputform",id = "searchField", placeholder = "Fill the valid content", style = "background:transparent; width : 350px;height: 10px; color: white" } })*@

                <b style="color:white">Name: </b>
                @Html.TextBox("searchTerm", null, new { @class = "inputform", id = "searchField", style = "background:transparent; width : 350px;height: 10px; color: white" })
                <input type="submit" value="Search Now" style="background:transparent; height: 50px; color: white; width: 100px " class="button" />
            }
        </div>
    
    <br />
    <br />
    <br />
    <h5 style="color:white; font-size: 20px;text-align:left">Or you can choose your area destination, we 'll give for you some suggestions</h5>
        <br />
        <br />
        <br />
    <div class="row text-center ">
        <div class="col-sm-2">
            <div class="thumbnail">
                <a href="@Url.Action("Moutain", "User")">
                    <img src="~/Photos/moutain.jpg" alt="Ha Long" width="200" height="200">
                    <p style="color:black"><strong>Moutain</strong></p>
                </a>

            </div>
        </div>

        <div class="col-sm-2">
            <div class="thumbnail">
                <a href="@Url.Action("Sea", "User")">
                    <img src="~/Photos/nhatrang.jpg" alt="Nha Trang" width="200" height="200">
                    <p style="color:black"><strong>Sea</strong></p>
                </a>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="thumbnail">
                <a href="@Url.Action("City", "User")">
                    <img src="~/Photos/bigcity.jpg" alt="Cat Ba" width="200" height="200">
                    <p style="color:black"><strong>City</strong></p>
                </a>
            </div>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-sm-2">
            <div class="thumbnail">
                <a href="@Url.Action("NationalPark", "User")">
                    <img src="~/Photos/nationpark.jpg" alt="Ha Long" width="200" height="200">
                    <p style="color:black"><strong>National Park</strong></p>
                </a>

            </div>
        </div>

        <div class="col-sm-2">
            <div class="thumbnail">
                <a href="@Url.Action("Pagoda", "User")">
                    <img src="~/Photos/pagoda.jpg" alt="Nha Trang" width="200" height="200">
                    <p style="color:black"><strong>Pagoda</strong></p>
                </a>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="thumbnail">
                <a href="@Url.Action("Relics", "User")">
                    <img src="~/Photos/relics.jpg" alt="Cat Ba" width="200" height="200">
                    <p style="color:black"><strong>Relics</strong></p>
                </a>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $.noConflict();
        jQuery(document).ready(function ($) {
            $("#searchField").autocomplete({
                source: '@Url.Action("getPlace","User")',
                minLength: 1
            });
        });

    </script>
</body>
</html>
