@using PagedList;
@using PagedList.Mvc;
@model IPagedList<WelcomeToVietnam.Models.Place>
@{ Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome To Viet Nam</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/scripts/jquery-1.8.2.js"></script>
    <script src="~/scripts/jquery.ui.autocomplete.js"></script>
    <script type="text/javascript">
        $(function()
        {
            $("#searchField").autocomplete({
                source:@Url.Action("getPlace"),
                minLength : 1
        });
        });
    </script>
    <link rel="stylesheet" type="text/css" href="~/Content/UserPage.css">
</head>
<body style="background-image: url(/Photos/user.jpg); background-position: center;">
    <div class="navbar navbar-default navbar-fixed-top" style="background: transparent;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>
    <br>
    <br>
    <h1 style="color:white" class="text-center"> LET 'S TRAVEL</h1>
    <h5 style="color:white; font-size: 20px" class="text-center">Choose your destination we will take you to go there</h5>
    <br>
    <div class="col-lg-10 col-lg-offset-1">
        <br>
        <br>
        <br>
        <div class="row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "color:red;font-weight:bold" })
            @using (@Html.BeginForm())
            {
                   <b> Search By :</b>
                   @Html.RadioButton("searchBy", "Name") <text> Name </text>
                   @Html.RadioButton("searchBy", "Area", true) <text> Area </text>


                    <br/>
                   @Html.Editor("search",new { htmlAttributes = new { @class = "inputform",id = "searchField", placeholder = "Enter the valid content", style = "background:transparent; width : 350px;height: 50px; color: white" } })
                @*<input class="inputform" type="text" style="color:white ;background : transparent; width : 350px; height: 50px" placeholder="Choose your area such as : Sea,Relics,etc...">*@
                   <input type="submit" value="Search Now" style="background:transparent; height: 50px; color: white; width: 100px " class="button" />
            }
        </div>
    </div>
</body>
</html>
