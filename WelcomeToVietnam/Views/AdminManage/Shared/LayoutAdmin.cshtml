
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Welcome To Viet Nam</title>


    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
    <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <script src="~/Content/assets/js/app.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/Layout.css" />
</head>
<body style="background-image:  linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(/Photos/userpage.jpg); background-position: inherit;background-repeat:repeat ">
    <div class="navbar navbar-default navbar-fixed-top" style="background:transparent">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                   
                </button>
                @Html.ActionLink("HomePage", "HomePage", "AdminManage", null, new { @class = "navbar-brand", @style = "color:white" })
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                        

                    <li>
                        <div class="dropdown" style="position:absolute">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                @Session["UserAdmin"]
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" style="background-color:blue">
                                <li><a href="@Url.Action("Logout","AdminManage")">Log out</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="container body-content">
        @RenderBody()

    </div>

</body>
</html>
